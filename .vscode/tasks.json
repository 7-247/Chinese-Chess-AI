{
    "version": "2.0.0",
    "tasks": [
		{
			"label": "Compile",
			"command": "C:\\software\\Dev-Cpp\\MinGW64\\bin\\g++.exe",
			"args": [
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe",
				"-std=c++11",
				"-g",
				"-m64",
				"-Wall",
				"-O2",

				"-static-libgcc",
				"-fexec-charset=GBK",
				"-D__USE_MINGW_ANSI_STDIO"
			],
			"type": "process",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$gcc"
		}
	]
}
